<div class="jumbotron jumbotron-fluid no-margin" style="background: #f5f5f5 !important;">
  <div class="containe">
    <div class="row no-gutters">
        <div class="col-sm-12 col-md-10 offset-md-1">
          <div class="row ">
            <% @enterprises.each do |enterprise| %>
              <div class="col-sm-12 col-md-4" data-toggle="modal" data-target="#<%= enterprise.id %>">
                <div class="card">
                  <div class="row no-gutters">
                    <div class="col-sm-12 col-md-6">
                      <div class="card-body" style="padding-right: 0">
                        <div class="card-img-top" style="background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url('<%= enterprise.entry.image.url %>'); background-size: cover; background-position: center;  width: 100%; height: 160px; padding: 0; color: #fff;"></div>
                      </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                      <div class="card-body">
                        <% if enterprise.image.present? %>
                          <div class="img-thumbnail" style="background: url('<%= enterprise.image.url %>'); background-size: cover; background-position: center;  width: 60px; height: 60px; padding: 0; color: #000;"></div>
                        <% else %>
                          <div class="img-thumbnail" style="background: #ddd; background-size: cover; background-position: center;  width: 60px; height: 60px; padding: 0; color: #000;"></div>
                        <% end %>
                        <h5 class="card-title no-margin"><% if enterprise.title.present? %><%= truncate(enterprise.title, length: 30) %><% end %></h5>
                        <p class="card-text">
                          <% if enterprise.municipality.present? %><%= enterprise.municipality.title %><% end %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="modal" tabindex="-1" role="dialog" id="<%= enterprise.id %>">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Modal title</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">

                      <div class="row no-gutters">
                        <div class="col-sm-12 col-md-2">
                          <% if enterprise.image.present? %>
                            <div class="img-thumbnail" style="background: url('<%= enterprise.image.url %>'); background-size: cover; background-position: center;  width: 60px; height: 60px; padding: 0; color: #000;"></div>
                          <% else %>
                            <div class="img-thumbnail" style="background: #ddd; background-size: cover; background-position: center;  width: 60px; height: 60px; padding: 0; color: #000;"></div>
                          <% end %>
                        </div>
                        <div class="col-sm-12 col-md-10">
                          <h5 class="no-margin"><% if enterprise.title.present? %><%= truncate(enterprise.title, length: 30) %><% end %></h5>
                          <p class=""><% if enterprise.municipality.present? %><%= enterprise.municipality.title %><% end %></p>
                        </div>
                      </div>

                    </div>
                  </div>
                </div>
              </div>

            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
