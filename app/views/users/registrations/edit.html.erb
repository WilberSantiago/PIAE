<div class="jumbotron jumbotron-fluid no-margin">

    <div class="row no-gutters">
      <div class="col-sm-12 col-md-6 offset-md-3">

        <div class="card">
          <div class="card-header">Editar cuenta</div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="card-body">
              <%= devise_error_messages! %>

                  <div class="row">
                    <div class="col-sm-12 col-md-6">
                      <div class="form-group">
                        <%= f.label :nombre  %>
                        <%= f.text_field :name, class: "form-control", required:  true %>
                      </div>
                    </div>

                    <div class="col-sm-12 col-md-6">
                      <div class="form-group">
                        <%= f.label :apellido %>
                        <%= f.text_field :surname, class: "form-control", required:  true %>
                      </div>
                    </div>

                      <div class="col-sm-12 col-md-8">
                        <div class="form-group">
                          <%= f.label :correo_electronico %>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required:  true %>
                        </div>
                      </div>

                      <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                          <%= f.label :contraseña %>
                          <%= f.password_field :password, autocomplete: "off", class: "form-control", required:  true %>
                        </div>
                      </div>

                      <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                          <%= f.label :password_confirmation %>
                          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required:  true %>
                        </div>
                      </div>

                      <div class="col-sm-12 col-md-12">
                        <div class="form-group">
                          <%= f.label :acerca_de_mi  %>
                          <%= f.text_field :description, class: "form-control", required:  true %>
                        </div>
                      </div>

                      <div class="col-sm-12 col-md-6">
                        <div class="custom-file">
                          <%= f.label :image, class: "custom-file-label"  %>
                          <%= f.file_field :image, class: "custom-file-input", required:  true %>
                        </div>
                      </div>

                      <div class="col-sm-12 col-md-8">
                        <div class="form-group">
                          <br> <%= f.label :contraseña_actual %>
                          <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
                        </div>
                      </div>

                  </div>

            </div>
            <div class="card-footer">
                  <%= f.submit "Enviar datos", class: "btn btn-primary float-right" %>
                  <%= render "users/shared/links" %>
            </div>
            <% end %>
          </div>

      </div>
    </div>

</div>

<div class="jumbotron jumbotron-fluid" style="background: #f3f3f3;">

    <div class="row no-gutters">
      <div class="col-sm-12 col-md-6 offset-md-3">
        <div class="card">
          <div class="card-body">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
          </div>
        </div>
      </div>
    </div>

</div>
